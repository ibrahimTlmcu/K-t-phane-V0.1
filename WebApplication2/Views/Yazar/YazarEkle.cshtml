@model WebApplication2.Models.Entity.TBLYAZARR
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h2>YazarEkle</h2>

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px"></div>
    <label>Yazar Adi</label>
    @Html.TextBoxFor(y => y.AD, new { @class = "form-check" })

    <div style="margin-top:15px">
        <label>Yazar Soyadi</label>
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-check" })
    </div>


    <div style="margin-top:15px">
        <label>Yazar Detay Bilgiler</label>
        @Html.TextBoxFor(y => y.DETAY, new { @class = "form-check" })
    </div>

    <div style="margin-top:15px">
        
        <button class="btn-info">Yazar Ekle</button>


    </div>

</form>