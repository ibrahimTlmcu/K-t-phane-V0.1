@model WebApplication2.Models.Entity.TBLYAZARR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h2>YazarGetir</h2>


@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar ID </lable>
        @Html.TextBoxFor(y => y.ID, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar Adi </lable>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar Soyadi </lable>
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar Detay </lable>
        @Html.TextBoxFor(y => y.DETAY, new { @class = "form-block" })
    </div>


    <div style="margin-bottom:35px"></div>
    <button class="btn btn-warning">Yazar Bilgisi Ekle</button>






}