@using WebApplication2.Models.Entity
@model List<TBLYAZARR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="text-align:center">Yazarlar</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<table style="background-color:rgb(252,178,22)" class="table table-striped" >
    <tr >
        <td style="background-color:rgb(252,178,22)">ID</td>
        <td style="background-color:rgb(252,178,22)">AD</td>
        <td style="background-color:rgb(252,178,22)">SOYAD</td>
        <td style="background-color:rgb(252,178,22)">DETAY</td>
    </tr>


    @foreach (var yzr in Model)
    {
        <tr > 
            <td>@yzr.ID</td>
            <td>@yzr.AD</td>
            <td>@yzr.SOYAD</td>
            <td>@yzr.DETAY</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = yzr.ID },
                       new { @class = "btn btn-danger", onclick = "return confirm('Silmek isityor musunuz')" })
                        <a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-outline-success">Guncelle</a>
                    </td>
        </tr>
    }
</table>



<a class="btn btn-primary" href="/Yazar/YazarEkle/"> Yeni Yazar Ekle</a>