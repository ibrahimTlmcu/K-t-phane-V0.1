@using WebApplication2.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h2 style=" text-align :center">Personel</h2>

<table class="table table-header-dark">
    <tr>
        <td>ID</td>
        <td>PERSONEL</td>
        <td>Sil</td>
        <td>Guncelle</td>
    </tr>

    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@prs.ID" class="btn bg-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@prs.ID" class="btn bg-success">Guncelle</a></td>
        </tr>
    }

</table>

<a href="/Personel/PersonelEkle/" class="btn btn-outline-success">Yeni Personel Ekle </a>