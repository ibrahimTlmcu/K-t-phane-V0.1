@using WebApplication2.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}


<h2 style="

    text-align:center;
    background-color:cadetblue;
    padding:15px;
    border-radius:9px;

    ">
    Duyurular
</h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<table style="background-color:rgb(252,178,22)" class="table table-striped">
    <tr>
        <th style="background-color:rgb(252,178,22)">Duyuru No</th>
        <th style="background-color:rgb(252,178,22)">Kategoriler</th>
        <th style="background-color:rgb(252,178,22)">Tarih</th>
        <th style="background-color:rgb(252,178,22)">Icerik</th>
        <th style="background-color:rgb(252,178,22)">Sil</th>
        <th style="background-color:rgb(252,178,22)">Guncelle</th>

    </tr>

    @foreach (var dyr in Model)
    {
        if (dyr.KATEGORI == "Salon")
        {
            renk = "bg-success text-white";

        }


        if (dyr.KATEGORI == "Yeni Kitap !")
        {
            renk = "bg-secondary text-white" ;

        }


        if (dyr.KATEGORI == "Bilgi")
        {
            renk = "bg-light text-dark";

        }

        <tr>
            <td>@dyr.ID</td>
            <td class="@renk">@dyr.KATEGORI</td>
            <td>@dyr.TARIH</td>
            <td>@dyr.ICERIK</td>
            <td><a href="/Duyuru/DuyuruSil/@dyr.ID" class="btn bg-danger">Sil</a></td>
            <td><a href="/Duyurular/DuyuruDetay/@dyr.ID" class="btn bg-success">Guncelle</a></td>
        </tr>
    }

</table>


<a href="/Duyurular/YeniDuyuru" class="btn btn-outline-success">Yeni Duyuru Ekle </a>