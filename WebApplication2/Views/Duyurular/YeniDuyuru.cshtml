@model WebApplication2.Models.Entity.TBLDUYURULAR
@{
    ViewBag.Title = "YeniDuyuru";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yeni Duyuru</h2>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">



<form class="form-group" method="post">

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable>Duyuru Kategorisi </lable>

        @Html.TextBoxFor(x => x.KATEGORI, new { @class = "form-control" })

    </div>



    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable>Duyuru Tarihi</lable>

        @Html.TextBoxFor(x => x.ICERIK, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable>Duyuru Icerigi</lable>

        @Html.TextBoxFor(x => x.TARIH, new { @class = "form-control" })

    </div>





    <div style="margin-top:15px">
       <a href="" class="btn btn-primary">  Yeni Duyuru Ekle  </a>
    </div>



</form>
