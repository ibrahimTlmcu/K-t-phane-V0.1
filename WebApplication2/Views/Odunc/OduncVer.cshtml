@model WebApplication2.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="max-height:100px; background-color:cadetblue;

border-radius:9px;

text-align :center;


">Kitap Odunc Ver</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px"></div>
    <label>Uye Adi</label>
    @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })

    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })
    </div>


    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })
    </div>


    <div style="margin-top:15px">
        <label>Kitap Alis Tarihi</label>
        <input  type="text" class="form-control" name="ALISTARIH" value=" @DateTime.Now.ToLongDateString()"/>
    </div>


    <div style="margin-top:15px">
        <label>Kitap Iade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH" value=" @DateTime.Now.AddDays(7).ToLongDateString()" />
    </div>


    <div style="margin-top:15px">

        <button class="btn btn-info ">Kitabi Odunc Ver</button>
    </div>


</form>
