@model WebApplication2.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h2 style="

    max-height:100px; 
    background-color:darkcyan;
    border-radius:9px;
    text-align :center;
    padding:10px;
    " >
    KitapGetir
</h2>

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Kitap ID </lable>
        @Html.TextBoxFor(y => y.ID, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Kitap Adi </lable>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Kategori </lable>
        @Html.TextBoxFor(y => y.KATEGORI, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar </lable>
        @Html.TextBoxFor(y => y.YAZAR, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Basim Yili </lable>
        @Html.TextBoxFor(y => y.BASIMYIL, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yayinevi </lable>
        @Html.TextBoxFor(y => y.YAYINEVI, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Sayfa Sayisi </lable>
        @Html.TextBoxFor(y => y.SAYFA, new { @class = "form-block" })
    </div>

    <div style="margin-bottom:35px"></div>
    <button class="btn btn-warning"> Guncelle</button>

    <input type="hidden" name="Durum" value="True" />

}