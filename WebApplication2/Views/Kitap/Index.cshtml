@using WebApplication2.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<h2 style="text-align:center;">Kitaplar</h2>

<table class="table table-bordered">

    <tr>
        <td>ID</td>
        <td>Kitap Adi</td>
        <td>Kitap Yazari</td>
        <td>Kategori</td>
        <td>Basim Yili</td>
        <td>Yayinevi</td>
        <td>Sayfa</td>
        <td>Durum</td>
    </tr>

    @foreach(var k in Model)
            {
                <tr>
                    <td>@k.ID</td>
                    <td>@k.AD</td>
                    <td>@k.YAZAR</td>
                    <td>@k.KATEGORI</td>
                    <td>@k.BASIMYIL</td>
                    <td>@k.YAYINEVI</td>
                    <td>@k.SAYFA</td>
                    <td>@k.DURUM</td>

                </tr>
            }
</table>

