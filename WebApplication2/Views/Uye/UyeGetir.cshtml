@model WebApplication2.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h2>UyeGetir</h2>



@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>


    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Uye Id </lable>
        @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar Adi </lable>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Yazar Soyadi </lable>
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
    </div>



    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> KULLANICI ADI </lable>
        @Html.TextBoxFor(y => y.KULLANICIADI, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> MAIL </lable>
        @Html.TextBoxFor(y => y.MAIL, new { @class = "form-control" })



        <div class="form-group">
            <div style="margin-bottom:15px"></div>
            <lable> SIFRE </lable>
            @Html.TextBoxFor(y => y.SIFRE, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <div style="margin-bottom:15px"></div>
            <lable> TELEFON </lable>
            @Html.TextBoxFor(y => y.TELEEFON, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <div style="margin-bottom:15px"></div>
            <lable> FOTOGRAF </lable>
            @Html.TextBoxFor(y => y.FOTOGRAF, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <div style="margin-bottom:15px"></div>
            <lable> OKUL </lable>
            @Html.TextBoxFor(y => y.OKUL, new { @class = "form-control" })
        </div>
    </div>


    <div style="margin-bottom:35px"></div>
    <button class="btn btn-warning">UYE GUNCELLE</button>


}