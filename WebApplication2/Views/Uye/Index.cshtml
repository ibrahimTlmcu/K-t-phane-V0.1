@using WebApplication2.Models.Entity

@using PagedList.Mvc
@using PagedList
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h2 style=" text-align:center;
    background-color:cadetblue;
    padding:15px;
    border-radius:9px;
">UYELER</h2>


<table class="table table-bordered">

    <tr>
        <td>UYE ID</td>
        <td>ADI</td>
        <td>SOYADI</td>
        <td>KULLANICI ADI</td>
        <td>MAIL</td>
        <td>SIFRE</td>
        <td>TELEFON</td>
        <td>FOTOGRAF</td>
        <td>OKUL</td>
        <td>SIL</td>
        <td>GUNCELLE</td>

    </tr>
    @foreach (var u in Model)
    {

        <tr>
            <td>@u.ID</td>
            <td>@u.AD</td>
            <td>@u.SOYAD</td>
            <td>@u.KULLANICIADI</td>
            <td>@u.MAIL</td>
            <td>@u.SIFRE</td>
            <td>@u.TELEEFON</td>
            <td>@u.FOTOGRAF</td>
            <td>@u.OKUL</td>
            <td><a href="/Uye/UyeSil/@u.ID" class="btn bg-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@u.ID" class="btn bg-success">Guncelle</a></td>
        </tr>

    }
</table>

<div class="pagination-container">
    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("index", new { sayfa }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
</div>

<style>
    /* Sayfalama düğmeleri için özel stiller */
    .pagination-container {
        text-align: center;
        margin-top: 20px;
    }

        .pagination-container a, .pagination-container span {
            display: inline-block;
            padding: 6px 12px;
            margin: 2px;
            border: 1px solid #ddd;
            background-color: #f8f8f8;
            color: #333;
            text-decoration: none;
            border-radius: 4px;
        }

        .pagination-container .disabled {
            pointer-events: none;
            background-color: #ddd;
            color: #888;
        }

        .pagination-container .active {
            background-color: #337ab7;
            color: #fff;
            border-color: #337ab7;
        }
</style>

<a href="/Uye/UyeEkle/" class="btn bg-success">Uye Ekle</a>