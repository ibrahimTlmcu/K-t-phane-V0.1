@model WebApplication2.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KategoriGetir</h2>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h2 style="

    max-height:100px;
    background-color:darkcyan;
    border-radius:9px;
    text-align :center;
    padding:10px;
    ">
    KitapGetir
</h2>

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Kategori ID </lable>
        @Html.TextBoxFor(y => y.ID, new { @class = "form-block" })
    </div>

    <div class="form-group">
        <div style="margin-bottom:15px"></div>
        <lable> Kategori Adi </lable>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-block" })
    </div>


    <div style="margin-bottom:35px"></div>
    <button class="btn btn-warning"> Guncelle</button>

    <input type="hidden" name="Durum" value="True" />

}