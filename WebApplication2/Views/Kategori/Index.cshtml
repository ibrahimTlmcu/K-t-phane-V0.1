@using WebApplication2.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}




<h2 style="text-align:center">Kategoriler</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<table style="background-color:rgb(252,178,22)" class="table table-striped">
    <tr>
        <td style="background-color:rgb(252,178,22)">ID</td>
        <td style="background-color:rgb(252,178,22)">AD</td>
        <td style="background-color:rgb(252,178,22)">Islemler</td>

    </tr>


    @foreach (var ktgr in Model)
    {

        <tr>
            <td>@ktgr.ID</td>
            <td>@ktgr.AD</td>
            

            <td>
                @Html.ActionLink("Sil", "KategoriSil", new { id = ktgr.ID },
                       new { @class = "btn btn-danger", onclick = "return confirm('Silmek isityor musunuz')" })
                @Html.ActionLink("Guncelle", "KategoriGetir", new { id = ktgr.ID })
            </td>
        </tr>
    }


</table>



<a class="btn btn-primary" href="/Kategori/KategoriEkle/">Ynei Kategori</a>